<div class="container">
	<div class="text-center">
		<h3>recipe</h3>
	</div>

	<div class="row">
		<div class="text-center">
			<h4>
				<%= search_form_for @search do |f| %>
			    <%= f.search_field :title_cont %>
			    <%= f.submit 'レシピを検索する' %>
			    <% end %>
		    </h4>
    	</div>
    </div>

	<div class="smoothie-index">
		<% @recipes.each do |recipe| %>
			<ul>
				<li>
					<div class="smoothie-box">
						<%= link_to recipe_path(recipe.id) do %>
							<%= attachment_image_tag recipe, :smoothie_image, size: "300x280" %>
						<% end %>
						<p><%= recipe.title %></p>
					</div>
				</li>
			</ul>
		<% end %>
	</div>

	<div class="text-center">
		<%= paginate @recipes %>
	</div>
</div>

