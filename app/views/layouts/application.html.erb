<!DOCTYPE html>
<html>
  <head>
    <title>SMOOTHIERoom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <span>SMOOTHIE_ROOM</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to ' レシピ一覧', recipes_path, class: 'glyphicon glyphicon-cutlery recipes' %></li>
              <li><%= link_to ' レシピ投稿', new_recipe_path, class: 'glyphicon glyphicon-tag recipes' %></li>
              <li><%= link_to ' マイページ', user_path(current_user.id), class: 'glyphicon glyphicon-home users' %></li>
              <li><%= link_to ' user一覧', users_path, class: 'glyphicon glyphicon-user users' %></li>
              <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
            <% else %>
              <li><%= link_to ' ホーム', root_path, class: 'glyphicon glyphicon-home home' %></li>
              <li><%= link_to ' アバウト', home_about_path, class: 'glyphicon glyphicon-link about' %></li>
              <li><%= link_to ' 新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
              <li><%= link_to ' ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <div class="container">
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </div>

  </body>

  <footer>
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
</html>
